-- Simple UI by qzy (L Copyers Players)
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local SoundService = game:GetService("SoundService")
local LocalPlayer = Players.LocalPlayer
local Mouse = LocalPlayer:GetMouse()

-- Som de clique
local clickSound = Instance.new("Sound")
clickSound.SoundId = "rbxassetid://12221967"
clickSound.Volume = 1
clickSound.Parent = SoundService

-- Cria GUI
local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
ScreenGui.Name = "SimpleUI"
ScreenGui.ResetOnSpawn = false

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 500, 0, 420)
Frame.Position = UDim2.new(0.5, -250, 0.5, -210)
Frame.BackgroundColor3 = Color3.fromRGB(80, 0, 130)
Frame.Active = true
Frame.Draggable = true

local UICorner = Instance.new("UICorner", Frame)
UICorner.CornerRadius = UDim.new(0, 12)

-- Minimizar e Fechar
local MinimizeBtn = Instance.new("TextButton", Frame)
MinimizeBtn.Size = UDim2.new(0, 25, 0, 25)
MinimizeBtn.Position = UDim2.new(1, -60, 0, 5)
MinimizeBtn.Text = "-"
MinimizeBtn.BackgroundTransparency = 1
MinimizeBtn.TextColor3 = Color3.new(1,1,1)
MinimizeBtn.Font = Enum.Font.GothamBold
MinimizeBtn.TextSize = 18

local CloseBtn = Instance.new("TextButton", Frame)
CloseBtn.Size = UDim2.new(0, 25, 0, 25)
CloseBtn.Position = UDim2.new(1, -30, 0, 5)
CloseBtn.Text = "X"
CloseBtn.BackgroundTransparency = 1
CloseBtn.TextColor3 = Color3.new(1,1,1)
CloseBtn.Font = Enum.Font.GothamBold
CloseBtn.TextSize = 18

local minimized = false
local originalSize = Frame.Size
local elementsToToggle = {}

MinimizeBtn.MouseButton1Click:Connect(function()
    clickSound:Play()
    if minimized then
        Frame.Size = originalSize
        for _, e in pairs(elementsToToggle) do
            e.Visible = true
        end
    else
        Frame.Size = UDim2.new(0, 500, 0, 50)
        for _, e in pairs(elementsToToggle) do
            e.Visible = false
        end
    end
    minimized = not minimized
end)

CloseBtn.MouseButton1Click:Connect(function()
    clickSound:Play()
    ScreenGui:Destroy()
end)

-- TÃ­tulo
local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1, -70, 0, 30)
Title.Position = UDim2.new(0, 10, 0, 5)
Title.BackgroundTransparency = 1
Title.Text = "SimpleUI"
Title.Font = Enum.Font.GothamBold
Title.TextSize = 20
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextXAlignment = Enum.TextXAlignment.Left

table.insert(elementsToToggle, Title)

-- Adicionando mais scripts famosos
local function createButton(text, posY, callback)
    local button = Instance.new("TextButton", Frame)
    button.Size = UDim2.new(0, 230, 0, 30)
    button.Position = UDim2.new(0, 20, 0, posY)
    button.Text = text
    button.BackgroundColor3 = Color3.fromRGB(100, 0, 180)
    button.TextColor3 = Color3.new(1, 1, 1)
    button.Font = Enum.Font.GothamBold
    button.TextSize = 14

    local corner = Instance.new("UICorner", button)
    corner.CornerRadius = UDim.new(0, 8)

    button.MouseButton1Click:Connect(function()
        clickSound:Play()
        callback()
    end)

    table.insert(elementsToToggle, button)
end

createButton("BTools", 50, function()
    for i = 1, 3 do
        local tool = Instance.new("HopperBin")
        tool.BinType = i
        tool.Parent = LocalPlayer.Backpack
    end
end)

createButton("NoClip (Hold E)", 90, function()
    local noclip = false
    UserInputService.InputBegan:Connect(function(i)
        if i.KeyCode == Enum.KeyCode.E then
            noclip = true
        end
    end)
    UserInputService.InputEnded:Connect(function(i)
        if i.KeyCode == Enum.KeyCode.E then
            noclip = false
        end
    end)
    game:GetService("RunService").Stepped:Connect(function()
        if noclip and LocalPlayer.Character then
            for _,v in pairs(LocalPlayer.Character:GetDescendants()) do
                if v:IsA("BasePart") and v.CanCollide == true then
                    v.CanCollide = false
                end
            end
        end
    end)
end)

createButton("God Mode", 130, function()
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
        LocalPlayer.Character.Humanoid.Name = "1"
        local newHumanoid = LocalPlayer.Character["1"]:Clone()
        newHumanoid.Name = "Humanoid"
        newHumanoid.Parent = LocalPlayer.Character
        wait(0.1)
        LocalPlayer.Character["1"]:Destroy()
        workspace.CurrentCamera.CameraSubject = LocalPlayer.Character
    end
end)

createButton("ESP Boxes", 170, function()
    local function addESP(player)
        local character = player.Character or player.CharacterAdded:Wait()
        local box = Instance.new("BoxHandleAdornment")
        box.Adornee = character:WaitForChild("HumanoidRootPart")
        box.AlwaysOnTop = true
        box.ZIndex = 5
        box.Size = Vector3.new(4, 6, 1)
        box.Transparency = 0.5
        box.Color3 = Color3.new(1, 0, 0)
        box.Parent = character
    end
    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer then
            addESP(player)
            player.CharacterAdded:Connect(function()
                wait(1)
                addESP(player)
            end)
        end
    end
end)

-- Outros scripts podem ser adicionados aqui
-- Basta continuar com createButton(...)
